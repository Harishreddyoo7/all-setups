TRIVY_VERSION=$(curl -s "https://api.github.com/repos/aquasecurity/trivy/releases/latest" | grep -Po '"tag_name": "v\K[0-9.]+')
wget https://github.com/aquasecurity/trivy/releases/download/v${TRIVY_VERSION}/trivy_${TRIVY_VERSION}_Linux-64bit.tar.gz -O trivy.tar.gz
tar -xzf trivy.tar.gz
sudo mv trivy /usr/local/bin/
trivy --version
#vim .bashrc
#export PATH=$PATH:/usr/local/bin/
#source .bashrc 
